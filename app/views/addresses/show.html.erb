<div>
  <h1 class="font-bold text-4xl">Addresses#show</h1>
  <% if @address %>

    <%= render @address %>
    <% if @transactions %>
      <div id="transactions">
        <% @transactions.each do |transaction| %>
          <% render transaction%>
        <% end %>
      </div>
    <% else %>
      <p>Transactions Not Found</p>
    <% end %>
  <% else %>
    <p>Address Not Found</p>
  <% end %>
</div>
